<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"

    >

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/single_item_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/single_item_image"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_picture" />

            <TextView
                android:id="@+id/single_item_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_item_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:singleLine="true"
                android:text="Tecno camon CM"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/single_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_item_name"
                android:layout_marginStart="10dp"
                android:singleLine="true"
                android:text="N35,000"
                android:textColor="@color/colorPrimary" />


            <ImageButton
                android:id="@+id/btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/single_item_name"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_fav_orange" />

            <Button
                android:id="@+id/single_item_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/btn"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorPrimary"
                android:padding="10dp"
                android:text="ADD TO CART"
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>






</LinearLayout>