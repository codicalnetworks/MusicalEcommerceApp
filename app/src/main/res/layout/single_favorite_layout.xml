<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"

    >

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/single_fav_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_alignEnd="@id/single_fav_image"
                android:src="@drawable/ic_remove" />

            <ProgressBar
                android:id="@+id/single_fav_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/single_fav_image"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:src="@drawable/default_picture" />

            <TextView
                android:id="@+id/single_fav_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_fav_image"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:text="Tecno camon CM"
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/single_fav_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_fav_name"
                android:singleLine="true"
                android:text="N35,000"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/single_fav_button"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/single_fav_price"
                android:text="MOVE TO CART"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorPrimary"
                android:padding="10dp"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>






</LinearLayout>