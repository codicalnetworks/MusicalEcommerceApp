<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codicalnetworks.e_commerceui.ContactUsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/contact_us_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send us a message"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/message_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_person"
            android:hint="Full name"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/message_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_mail"
            android:hint="Email"
            android:inputType="textWebEmailAddress"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"/>


        <EditText
            android:id="@+id/message_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_background"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_mail"
            android:hint="Enter your message"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"/>

        <ProgressBar
            android:id="@+id/message_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your message will be processed within 48 hours"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/message_send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="SEND"
            android:textColor="@android:color/white"/>

    </LinearLayout>



</LinearLayout>
